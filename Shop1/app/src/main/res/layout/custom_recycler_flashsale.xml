<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/frLayout">
<LinearLayout
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

   >
    <ImageView
        android:padding="5dp"
        android:id="@+id/imKhuyenMai"
        android:layout_marginTop="3dp"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
     android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/txtGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="979.000 VNĐ"
        android:textColor="@color/bgLinearInToolBar"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_gravity="center"/>

    <ProgressBar
        android:layout_marginTop="5dp"
        android:id="@+id/idProgress"
        android:layout_gravity="center"
        android:layout_width="105dp"
        android:layout_height="13dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progressbar"

  />
</LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="1dp"
    >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐÃ BÁN"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="9sp"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right">

        <View
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:background="@color/transparentyellow"
            />
        <TextView
            android:id="@+id/txtPhanTramKM"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40%"
            android:textSize="11sp"
            android:textColor="@color/bgLinearInToolBar"
            android:textStyle="bold"
            />

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIẢM"
            android:textSize="11sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>
    </FrameLayout>
</FrameLayout>