<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/im"
            android:orientation="vertical"
            >


            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/acc"

                android:layout_marginLeft="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                />

            <TextView
               android:visibility="gone"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:layout_centerVertical="true"
               android:layout_marginLeft="85dp"



                />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người theo "
                android:id="@+id/txtnguoitheo"
                android:gravity="left"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:layout_alignBottom="@id/username"
                android:layout_alignLeft="@+id/username"
                android:layout_alignStart="@+id/username"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:visibility="gone"
                android:layout_marginTop="72dp"
                android:layout_marginLeft="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 "
                android:textColor="@color/colorWhite"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/txtdangtheo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="| Đang theo"
                android:textSize="14sp"
                android:textColor="#FFF"
              android:layout_marginLeft="170dp"
                android:layout_marginTop="72dp"
                />

            <ImageButton
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/imSetup"
                android:background="@drawable/vientronsetup"
                android:src="@drawable/ic_brightness_high_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp">
                <Button
                    android:id="@+id/btnDangNhap"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:text="Đăng nhập"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/bgdangnhap"

                    />

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnDangky"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:text="Đăng ký"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/bgdangky"
                    />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gantrang"/>
           <LinearLayout
               android:id="@+id/lnButton"
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@color/colorWhite"
               android:orientation="horizontal"
               android:padding="10dp"
               style="@android:style/Widget.Button">

               <ImageView
                    android:layout_marginRight="5dp"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_schedule_black_24dp"
                   android:gravity="start|left"/>
                <TextView
                    android:padding="1dp"
                    android:id="@+id/txtTieude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn mua"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"/>

               <TextView
                   android:id="@+id/txtEnd"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Xem lịch sử mua hàng"
                   android:textStyle="normal"
                   android:textSize="12sp"
                   />

               <ImageView
                   android:layout_width="26dp"
                   android:layout_height="26dp"
                   android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                  />

           </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gantrang"/>

            <LinearLayout
                android:id="@+id/lnButton1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="10dp"
                style="@style/Widget.AppCompat.Button">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite_black_24dp"
                    android:gravity="start|left"/>
                <TextView
                    android:padding="1dp"
                    android:id="@+id/txtTieude1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ưa thích"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/txtEnd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem sản phẩm đã thích"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gantrang"/>

            <LinearLayout
                android:id="@+id/lnButton2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:gravity="start|left"
                    android:src="@drawable/ic_schedule_black_24dp" />

                <TextView
                    android:id="@+id/txtTieude2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="Mời xem"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/txtEnd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm đã xem gần đây"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gantrang"/>

            <LinearLayout
                android:id="@+id/lnButton4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="10dp"
                style="@style/Widget.AppCompat.Button">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/account"
                    android:gravity="start|left"/>

                <TextView
                    android:id="@+id/txtTieude4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="Ví shoppe"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/txtEnd4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem ví của tôi"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gantrang"/>

            <LinearLayout
                android:id="@+id/lnButton5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:gravity="start|left"
                    android:src="@drawable/ic_monetization_on_black_24dp" />

                <TextView
                    android:id="@+id/txtTieude5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="Shopee xu của tôi"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/txtEnd5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to tích lũy shopee xu của tôi"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gantrang"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gantrang"/>

            <LinearLayout
                android:id="@+id/lnButton6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="10dp"
                style="@style/Widget.AppCompat.Button">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_stars_black_24dp"
                    android:gravity="start|left"/>
                <TextView
                    android:padding="1dp"
                    android:id="@+id/txtTieude6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá của tôi"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/txtEnd6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem đánh giá của tôi"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gantrang"/>

            <LinearLayout
                android:id="@+id/lnButton7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="10dp"
                style="@style/Widget.AppCompat.Button">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/account"
                    android:gravity="start|left"/>
                <TextView
                    android:padding="1dp"
                    android:id="@+id/txtTieude7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/txtEnd7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tài khoản của tôi"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gantrang"/>

            <LinearLayout
                android:id="@+id/lnButton8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="10dp"
                style="@style/Widget.AppCompat.Button">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_help_black_24dp"
                    android:gravity="start|left"/>
                <TextView
                    android:padding="1dp"
                    android:id="@+id/txtTieude8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trợ giúp"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/txtEnd8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem trợ giúp của tôi"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gantrang"/>








        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>