<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorWhite"
    android:layout_margin="5dp"
    android:id="@+id/lnTopDienThoaiPB"
    >

    <ImageView
        android:id="@+id/imSanPham"
        android:layout_width="165dp"
        android:layout_height="170dp"
        android:scaleType="centerInside"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txtTenSP"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Điện thoại LAND ROVER Xp3300(A8+) pin 120"
        android:textSize="15sp"
        android:textColor="#000"/>
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/txtGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đ 360.000"
        android:textColor="@color/bgToolbar"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border_black_18dp"/>
        <TextView
            android:id="@+id/txtLuotThich"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorGray"
            android:layout_weight="1"/>




        <TextView

            android:id="@+id/txtChuaDanhGia"
            android:paddingTop="3dp"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có đánh giá"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textSize="12sp"
            android:textColor="@color/colorGray" />
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/frDanhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <RatingBar
                android:layout_marginTop="3.5dp"
                android:id="@+id/rdTongDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/DoiMauRatingBar"
                android:scaleX=".7"
                android:scaleY=".7"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:rating="5"
                android:padding="0dp"

                />


                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="right"
                    android:id="@+id/txtTongBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                   />






        </FrameLayout>
    </LinearLayout>

</LinearLayout>