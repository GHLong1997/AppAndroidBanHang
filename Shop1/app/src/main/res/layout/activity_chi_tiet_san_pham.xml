<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.hangoclong.shop1.View.ChiTietSanPham.ChiTietSanPhamActivity">

                <!--thông tin sản phẩm-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewPagerSlide"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"/>
                            <LinearLayout
                                android:id="@+id/lnDot"
                                android:layout_gravity="bottom|center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="30dp"
                                android:orientation="horizontal"
                                android:gravity="center"

                                />


                        </FrameLayout>


                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txtTenSP"
                            android:text="Điện thoại Xiaomi Redmi Note 4(64GB/4GB)- Chính Hãng DGW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txtGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="đ 4.990.000"
                            android:textColor="@color/bgLinearInToolBar"
                            android:textSize="17sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:id="@+id/frDanhGia1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                >

                                <RatingBar
                                    android:layout_marginTop="3.5dp"
                                    android:id="@+id/rdTongDanhGia1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/DoiMauRatingBar"
                                    android:scaleX=".7"
                                    android:scaleY=".7"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:transformPivotX="0dp"
                                    android:transformPivotY="0dp"
                                    android:rating="5"
                                    android:padding="0dp"

                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="59dp"
                                    >
                                    <TextView

                                        android:id="@+id/txtTongRating1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4.5/5"
                                        android:textColor="@color/bgToolbar"/>

                                </LinearLayout>





                            </FrameLayout>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/txtChuaDanhGia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chưa có đánh giá"
                                />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:layout_marginTop="10dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"/>

                            <TextView
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/Xanh"
                                android:id="@+id/txtVietDanhGia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Viết đánh giá"
                                android:textSize="12sp"/>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EEEEEE"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shopee Xu"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="#E0E0E0"/>


                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"/>

                <!--Thích ,BL, chia sẻ sản phẩm-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="155dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:background="@drawable/vienchunhatln">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_favorite_border_black_18dp"
                                android:background="@android:color/transparent"/>
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thích"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/txtLuotThich"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="155dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:background="@drawable/vienchunhatln">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_favorite_border_black_18dp"
                                android:background="@android:color/transparent"/>
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bình luận"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/txtLuotBL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"/>

                        </LinearLayout>
                        <ImageButton
                            android:layout_marginLeft="10dp"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share_black_18dp"
                            android:background="@drawable/vienchunhatln"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/vienvangxamln">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/dambao1"/>
                            <TextView
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shopee Đảm bảo"
                                android:textColor="#64DD17"/>
                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhận hàng hoắc được hoàn lại tiền"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#E0E0E0"/>

                <!--Thông tin shop-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/sh1"
                            android:layout_marginRight="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/txtTenShop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="quadaymua"
                                android:textSize="12sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Online 22 phút trước"

                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <Button
                            android:layout_width="80dp"
                            android:layout_height="27dp"
                            android:text="Xem Shop"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:background="@drawable/vienchunhatln"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp">
                                <ImageView
                                    android:layout_marginRight="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_card_giftcard_black_18dp"/>
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="442"
                                    android:textColor="@color/bgToolbar"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sản phẩm"
                                android:textSize="11sp"/>


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"

                            android:background="#E0E0E0"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp">
                                <ImageView
                                    android:layout_marginRight="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star_border_black_18dp"/>
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.6"
                                    android:textColor="@color/bgToolbar"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đánh giá"
                                android:textSize="11sp"/>


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"

                            android:background="#E0E0E0"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp">
                                <ImageView
                                    android:layout_marginRight="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_chat_bubble_outline_black_18dp"/>
                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="84%"
                                    android:textColor="@color/bgToolbar"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phản hồi Chat"
                                android:textSize="11sp"/>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#E0E0E0"/>
                <!--Chi tiết sản phẩm-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin sản phẩm"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtThongTinSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/txtChiTietSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi Tiết sản phẩm"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerChiTietSanPham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#E0E0E0"/>

                <!--Đánh giá sản phẩm-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đánh Giá Sản Phẩm"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:id="@+id/txtCDG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chưa có đánh gia"/>
                            <FrameLayout
                                android:id="@+id/frDanhGia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <RatingBar
                                    android:layout_marginTop="3.5dp"
                                    android:id="@+id/rdTongDanhGia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/DoiMauRatingBar"
                                    android:scaleX=".7"
                                    android:scaleY=".7"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:transformPivotX="0dp"
                                    android:transformPivotY="0dp"
                                    android:rating="5"
                                    android:padding="0dp"

                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="59dp"
                                    >
                                    <TextView

                                        android:id="@+id/txtTongRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4.5/5"
                                        android:textColor="@color/bgToolbar"/>
                                    <TextView
                                        android:textSize="15sp"
                                        android:id="@+id/txtTongBL"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" (0)"/>
                                </LinearLayout>





                            </FrameLayout>

                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txtXemTatCa"
                            android:layout_marginTop="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem tất cả"
                            android:textColor="@color/bgToolbar"
                            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_18dp"/>

                    </LinearLayout>
                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_danhgia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar


            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            >

        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDE"
            android:layout_gravity="bottom"
            ></View>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#00BFA5"
            android:padding="10dp"
            android:layout_weight="2">
            <ImageButton
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bub"
                android:background="@android:color/transparent"
                android:layout_weight="1"

                />
            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#006064"
                />
            <ImageButton
                android:id="@+id/imThemGiohang"
                android:layout_marginLeft="3dp"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_shopping_cart_white_24dp"

                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Mua ngay"
            android:layout_weight="3"
            android:background="#FF3D00"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</FrameLayout>


