<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPagerSlide"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:layout_gravity="bottom"
                android:id="@+id/layoutDot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                />
        </FrameLayout>


        <View

            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@drawable/bb"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            >
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="65dp"
                android:layout_height="15dp"
                android:background="@drawable/flashsale"
                />
            <TextView
                android:id="@+id/txtTime"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:10:10"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"/>

            <TextView
                android:paddingLeft="7dp"
                android:paddingRight="3dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem Tất Cả"
                android:textSize="13sp"
                android:background="@drawable/bg_text1"
                android:textColor="@color/colorWhite"
                android:layout_gravity="right"
                android:gravity="right"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_white_18dp"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerFlashSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@drawable/bb"
            android:layout_marginBottom="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOPEE MAIL"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="#D32F2F"/>

            <TextView
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem thêm"
                android:textSize="13sp"
                android:background="@drawable/bg_text"
                android:textColor="@color/colorWhite"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_white_18dp"

                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerThuongHieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miễn phí trả hàng"
                android:layout_weight="1"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#D32F2F"/>

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính hãng 100%"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="#D32F2F"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giao hàng miễn phí"

                android:layout_weight="1"
                android:textSize="10sp"

                android:textColor="#D32F2F"/>
        </LinearLayout>


        <View
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@drawable/bb"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="7dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SẢN PHẨM PHỔ BIẾN"
                android:paddingLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/bgToolbar"
                android:layout_weight="1"/>
            <TextView

                android:layout_marginRight="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem Tất Cả"
                android:textSize="11sp"
                android:background="@drawable/bg_text1"
                android:textColor="@color/colorWhite"
                android:layout_gravity="right"
                android:gravity="right"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_white_18dp"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerSanPhamPhoBien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@drawable/bb"
            />

        <TextView
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANH MỤC"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:textColor="@color/bgToolbar"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerDanhMuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@drawable/bb"
            />
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SẢN PHẨM MỚI VỀ"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:textColor="@color/bgToolbar"
            android:layout_weight="1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerSanPhamMoiVe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
