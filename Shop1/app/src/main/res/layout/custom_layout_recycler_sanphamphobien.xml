<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/frLayout">
    <LinearLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:padding="5dp"
            android:id="@+id/imSanPhamPhoBien"
            android:layout_marginTop="3dp"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"

            android:layout_marginBottom="7dp"
            />
        <TextView
            android:id="@+id/txtTenSP"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Pin sạc dự phong cao câp"
            android:textColor="@color/bgLinearInToolBar"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"

          />
        <TextView
            android:id="@+id/txtGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="979.000 VNĐ"
            android:textColor="@color/bgLinearInToolBar"
            android:textSize="10sp"
       />


    </LinearLayout>


</FrameLayout>