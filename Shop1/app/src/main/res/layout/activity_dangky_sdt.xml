<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.hangoclong.shop1.View.DangNhap.DangKy.ActivityDangkySdt"
        android:orientation="vertical"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <EditText

                    android:id="@+id/edMaXacMinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mã xác minh"/>

                <Button
                    android:id="@+id/btnTieptuc"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bgdangnhap_facebook"
                    android:text="Tiếp tục"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnGuiLai"
                android:layout_marginTop="22dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:text="Gửi lại"
                android:background="@drawable/vien_chunhat"
                />

        </FrameLayout>




    </LinearLayout>


</FrameLayout>


